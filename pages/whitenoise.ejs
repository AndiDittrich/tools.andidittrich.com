<%
    globals.heading='White noise'
    globals.headline='Create random image via <a href="https://developer.mozilla.org/en-US/docs/Web/API/Crypto/getRandomValues" target="_blank">Crypto.getRandomValues</a>'
%>
<%- include('/templates/header'); %>

<main id="module-whitenoise">
    <div class="container">
        <div class="row">
            <div class="col">
                <hr />
            </div>
            <div class="col-md-auto">
                <button type="button" class="btn btn-large btn-success pull-right" id="btn-generate">Generate 
                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-terminal" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M14 2H2a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1zM2 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2H2z"/>
                        <path fill-rule="evenodd" d="M6 9a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3A.5.5 0 0 1 6 9zM3.146 4.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1 0 .708l-2 2a.5.5 0 1 1-.708-.708L4.793 6.5 3.146 4.854a.5.5 0 0 1 0-.708z"/>
                      </svg>
                </button>
            </div>
        </div>

        <div class="input-group" style="width: 50%;margin-left: 25%">
            <div class="input-group-prepend">
                <label class="input-group-text" for="presetList">Size</label>
            </div>
            <select size="1" id="presetList" class="custom-select">
                <option value="50">50x50px</option>
                <option value="100">100x100px</option>
                <option value="200" selected>200x200px</option>
                <option value="500">500x500px</option>
            </select>
        </div>

        <hr />


        <div class="row">
            <div class="col">
                <h3 class="left">Image</h3>
                <canvas id="output" alt="noise" width="200" height="200"  class="rounded mx-auto d-block img-thumbnail"></canvas>
            </div>
        </div>
        
    </div>
</main>

<script src="webtools.min.js"></script>

<%- include('/templates/footer'); %>
